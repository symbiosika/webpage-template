{% if config.googleAnalyticsId or config.facebookPixelId %}
<div id="cookie-banner" style="display: none;" class="fixed bottom-0 left-0 right-0 flex items-center justify-center z-50">
  <div class="bg-white p-6 rounded-t-lg shadow-lg max-w-md mx-auto">
    <p class="text-gray-700 mb-4">
      Diese Website verwendet Cookies für
      {% if config.googleAnalyticsId and config.facebookPixelId %}
        Google Analytics und Facebook Pixel
      {% elif config.googleAnalyticsId %}
        Google Analytics
      {% else %}
        Facebook Pixel
      {% endif %}.
      Möchten Sie diese aktivieren?
    </p>
    <div class="flex justify-end space-x-4">
      <button onclick="declineCookies()" class="px-4 py-2 border border-gray-300 rounded-md hover:bg-gray-100">Ablehnen</button>
      <button onclick="acceptCookies()" class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">Akzeptieren</button>
    </div>
  </div>
</div>
{% endif %}