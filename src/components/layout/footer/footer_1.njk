<footer class="z-50 pt-5 border-t border-gray-200 text-center text-base text-gray-800">
    <div class="flex flex-col sm:flex-row justify-center items-center gap-2 sm:gap-0">
        {% for item in footer.navigation %}
            {% if not loop.first %}
                <span class="hidden sm:inline mx-2">|</span>
            {% endif %}
            <a href="{{ item.url }}" class="text-gray-800 hover:text-primary-900">{{ item.title }}</a>
        {% endfor %}
    </div>
    <p class="pt-1 text-sm">&copy; {{ '' | year }} -
        <a href="{{ footer.company.url }}" target="_blank" class="text-primary-600 hover:text-primary-900">{{ footer.company.name }}</a>
    </p>
</footer>