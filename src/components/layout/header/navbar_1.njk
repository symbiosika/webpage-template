<nav class="flex flex-col sm:flex-row w-full justify-between items-center px-4 sm:px-6 py-1 bg-background dark:bg-background-dark shadow
    sm:shadow-none">
  <div class="w-full sm:w-auto self-start sm:self-center flex flex-row sm:flex-none flex-no-wrap justify-between items-center">
    <a href="{{ header.logoUrl | default('/') }}" class="no-underline hover:text-highlight dark:hover:text-highlight-dark hover:no-underline flex flex-row items-center space-x-2">
      <img src="{{ header.logoPath }}" alt="{{ header.logoAlt }}" class="h-12 py-1"/>
      {% if header.logoText %}
        <span class="text-highlight dark:text-highlight-dark font-bold text-2xl">{{ header.logoText }}</span>
      {% endif %}
    </a>
    <!-- Hamburger Button -->
    <button
      id="menuBtn"
      class="block sm:hidden w-8 h-8 relative focus:outline-none"
      type="button"
      onclick="document.getElementById('menuBtn').classList.toggle('active');
        document.getElementById('menu').classList.toggle('hidden');"
      aria-label="Show Menu">
      <span class="absolute w-6 h-0.5 bg-content dark:bg-content-dark rounded transform transition-all duration-300 left-1 top-2
        group-[.active]:rotate-45 group-[.active]:translate-y-[7px]"></span>
      <span class="absolute w-6 h-0.5 bg-content dark:bg-content-dark rounded transform transition-all duration-300 left-1 top-4
        group-[.active]:opacity-0"></span>
      <span class="absolute w-6 h-0.5 bg-content dark:bg-content-dark rounded transform transition-all duration-300 left-1 bottom-2
        group-[.active]:-rotate-45 group-[.active]:-translate-y-[7px]"></span>
    </button>
  </div>
  <div
    id="menu"
    class="w-full sm:w-auto self-end sm:self-center sm:flex flex-col sm:flex-row items-center h-full py-4 sm:py-0 hidden">
    <div class="flex flex-col sm:flex-row space-y-6 sm:space-y-0 sm:space-x-8 items-center w-full sm:w-auto">
      {% for item in header.menuItems %}
        <a class="text-highlight-secondary dark:text-highlight-secondary-dark font-bold hover:text-highlight dark:hover:text-highlight-dark text-xl w-full sm:w-auto text-center" href="{{ item.url }}">
          {{ item.text }}
        </a>
      {% endfor %}

      <!-- Dark Mode Toggle -->
      <button
        id="darkModeToggle"
        class="w-8 h-8 flex items-center justify-center text-content dark:text-content-dark hover:text-highlight dark:hover:text-highlight-dark"
        onclick="document.body.classList.toggle('dark');
                 localStorage.setItem('darkMode', document.body.classList.contains('dark'));"
        aria-label="Toggle Dark Mode">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 hidden dark:block" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"/>
        </svg>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 block dark:hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"/>
        </svg>
      </button>
    </div>
  </div>
</nav>

<!-- Add this script to initialize dark mode based on user preference -->
<script>
  if (localStorage.getItem('darkMode') === 'true' || (!localStorage.getItem('darkMode') && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
    document
      .body
      .classList
      .add('dark');
  }
</script>