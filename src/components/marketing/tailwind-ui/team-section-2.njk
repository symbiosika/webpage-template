<div class="bg-white py-24 sm:py-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl lg:mx-0">
      <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">{{ data.headline }}</h2>
      <p class="mt-6 text-lg leading-8 text-gray-600">{{ data.description }}</p>
    </div>
    <ul role="list" class="mx-auto mt-20 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 lg:mx-0 lg:max-w-none lg:grid-cols-2">
      {% for member in data.team %}
      <li>
        <img class="aspect-[3/2] w-full rounded-2xl object-cover" src="{{ member.image }}" alt="">
        <h3 class="mt-6 text-lg font-semibold leading-8 tracking-tight text-gray-900">{{ member.name }}</h3>
        <p class="text-base leading-7 text-blue-600">{{ member.role }}</p>
        <p class="mt-4 text-base leading-7 text-gray-600">{{ member.description }}</p>
      </li>
      {% endfor %}
    </ul>
  </div>
</div> 