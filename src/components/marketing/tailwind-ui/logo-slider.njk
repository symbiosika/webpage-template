<section class="relative overflow-hidden bg-background dark:bg-background-dark py-24 rounded-md">
  <!-- Gradient Overlays -->
  <div class="absolute left-0 top-0 w-32 h-full bg-gradient-to-r from-background dark:from-background-dark to-transparent z-10"></div>
  <div class="absolute right-0 top-0 w-32 h-full bg-gradient-to-l from-background dark:from-background-dark to-transparent z-10"></div>
  
  <!-- Logo Container -->
  <div class="relative">
    <div class="w-full inline-flex flex-nowrap overflow-hidden [mask-image:_linear-gradient(to_right,transparent_0,_black_128px,_black_calc(100%-128px),transparent_100%)]">
      <!-- 20 Kopien der Logos -->
      {% for i in range(0, 20) %}
        <div class="flex items-center justify-center md:justify-start [&_li]:mx-8 [&_img]:max-w-none animate-infinite-scroll">
          <ul class="flex">
            {% for logo in data.logos %}
              <li>
                  {% if logo.url %}
                    <a href="{{ logo.url }}" target="_blank" 
                       class="text-content dark:text-content-dark hover:text-highlight dark:hover:text-highlight-dark">
                      <img src="{{ logo.src }}" alt="{{ logo.alt }}" class="h-16 w-auto">
                    </a>
                  {% else %}
                    <img src="{{ logo.src }}" alt="{{ logo.alt }}" class="h-16 w-auto">
                  {% endif %}
              </li>
            {% endfor %}
          </ul>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  @keyframes infinite-scroll {
    0% { transform: translateX(0); }
    100% { transform: translateX(-100%); }
  }  
  .animate-infinite-scroll {
    animation: infinite-scroll 20s linear infinite;
  }
  @media (prefers-reduced-motion: no-preference) {
    .animate-infinite-scroll {
      will-change: transform;
    }
  }
  .animate-infinite-scroll {
    backface-visibility: hidden;
    -webkit-backface-visibility: hidden;
    -moz-backface-visibility: hidden;
    transform: translate3d(0, 0, 0);
    -webkit-transform: translate3d(0, 0, 0);
    -moz-transform: translate3d(0, 0, 0);
  }
</style>