<div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
  {# Linke Spalte mit Text #}
  <div class="space-y-6">
    <h2 class="text-4xl font-bold text-content dark:text-content-dark">
      {{ data.title }}
    </h2>
    
    <p class="text-lg text-content-secondary dark:text-content-secondary-dark">
      {{ data.description }}
    </p>

    {% if data.cta %}
    <div class="pt-4">
      <a href="{{ data.cta.url }}" class="inline-flex items-center text-primary-600 hover:text-primary-700">
        <span>{{ data.cta.label }}</span>
        <svg class="ml-2 w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
    {% endif %}
  </div>

  {# Rechte Spalte mit Phone-Screenshot #}
  <div class="relative">
    <div class="relative mx-auto w-full max-w-[320px]">
      <img 
        src="{{ data.phone.image }}" 
        alt="{{ data.phone.alt }}"
        class="w-full h-auto rounded-[2.5rem] shadow-xl"
      >
    </div>
  </div>
</div> 