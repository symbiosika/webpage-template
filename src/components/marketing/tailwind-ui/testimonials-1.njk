<section class="relative isolate overflow-hidden bg-white px-6 py-24 sm:py-32 lg:px-8">
    <div class="absolute inset-0 -z-10 bg-[radial-gradient(45rem_50rem_at_top,{{colors.background}},white)] opacity-20"></div>
    <div class="absolute inset-y-0 right-1/2 -z-10 mr-16 w-[200%] origin-bottom-left skew-x-[-30deg] bg-white shadow-xl shadow-primary-600/10 ring-1 ring-primary-50 sm:mr-28 lg:mr-0 xl:mr-16 xl:origin-center"></div>
    <div class="mx-auto max-w-2xl lg:max-w-4xl">
        {% if data.logo %}
            <img class="mx-auto h-12" src="{{ data.logo.src }}" alt="{{ data.logo.alt }}">
        {% endif %}
        <figure class="mt-10">
            <blockquote class="text-center text-xl/8 font-semibold text-gray-900 sm:text-2xl/9">
                <p>{{ data.quote }}</p>
            </blockquote>
            <figcaption class="mt-10">
                <img class="mx-auto size-10 rounded-full" src="{{ data.author.image }}" alt="{{ data.author.name }}">
                <div class="mt-4 flex items-center justify-center space-x-3 text-base">
                    <div class="font-semibold text-gray-900">{{ data.author.name }}</div>
                    <svg viewBox="0 0 2 2" width="3" height="3" aria-hidden="true" class="fill-gray-900">
                        <circle cx="1" cy="1" r="1"/>
                    </svg>
                    <div class="text-gray-600">{{ data.author.title }}</div>
                </div>
            </figcaption>
        </figure>
    </div>
</section>