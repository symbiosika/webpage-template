<div class="bg-white py-24 sm:py-32">
    <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
        <h2 class="text-base/7 font-semibold text-primary-600">{{ data.headline }}</h2>
        <p class="mt-2 max-w-lg text-pretty text-4xl font-semibold tracking-tight text-secondary-950 sm:text-5xl">{{ data.subheadline }}</p>
        <div class="mt-10 grid grid-cols-1 gap-4 sm:mt-16 lg:grid-cols-6 lg:grid-rows-[auto_auto]">
            {# Box 1 - Large Left #}
            <div class="relative lg:col-span-3 lg:row-start-1">
                <div class="absolute inset-px rounded-lg bg-white max-lg:rounded-t-[2rem] lg:rounded-tl-[2rem]"></div>
                <div class="relative flex h-full flex-col overflow-hidden rounded-[calc(theme(borderRadius.lg)+1px)] max-lg:rounded-t-[calc(2rem+1px)] lg:rounded-tl-[calc(2rem+1px)]">
                    <img class="h-80 object-cover object-left" src="{{ data.boxes[0].image }}" alt="{{ data.boxes[0].imageAlt }}">
                    <div class="p-10 pt-4">
                        <h3 class="text-sm/4 font-semibold text-primary-600">{{ data.boxes[0].label }}</h3>
                        <p class="mt-2 text-lg font-medium tracking-tight text-secondary-950">{{ data.boxes[0].title }}</p>
                        <p class="mt-2 max-w-lg text-sm/6 text-secondary-600">{{ data.boxes[0].description }}</p>
                    </div>
                </div>
                <div class="pointer-events-none absolute inset-px rounded-lg shadow ring-1 ring-black/5 max-lg:rounded-t-[2rem] lg:rounded-tl-[2rem]"></div>
            </div>

            {# Box 2 - Large Right #}
            <div class="relative lg:col-span-3 lg:row-start-1">
                <div class="absolute inset-px rounded-lg bg-white lg:rounded-tr-[2rem]"></div>
                <div class="relative flex h-full flex-col overflow-hidden rounded-[calc(theme(borderRadius.lg)+1px)] lg:rounded-tr-[calc(2rem+1px)]">
                    <img class="h-80 object-cover object-left lg:object-right" src="{{ data.boxes[1].image }}" alt="{{ data.boxes[1].imageAlt }}">
                    <div class="p-10 pt-4">
                        <h3 class="text-sm/4 font-semibold text-primary-600">{{ data.boxes[1].label }}</h3>
                        <p class="mt-2 text-lg font-medium tracking-tight text-secondary-950">{{ data.boxes[1].title }}</p>
                        <p class="mt-2 max-w-lg text-sm/6 text-secondary-600">{{ data.boxes[1].description }}</p>
                    </div>
                </div>
                <div class="pointer-events-none absolute inset-px rounded-lg shadow ring-1 ring-black/5 lg:rounded-tr-[2rem]"></div>
            </div>

            {# Box 3 - Bottom Left #}
            <div class="relative lg:col-span-2 lg:row-start-2">
                <div class="absolute inset-px rounded-lg bg-white lg:rounded-bl-[2rem]"></div>
                <div class="relative flex h-full flex-col overflow-hidden rounded-[calc(theme(borderRadius.lg)+1px)] lg:rounded-bl-[calc(2rem+1px)]">
                    <img class="h-80 object-cover object-left" src="{{ data.boxes[2].image }}" alt="{{ data.boxes[2].imageAlt }}">
                    <div class="p-10 pt-4">
                        <h3 class="text-sm/4 font-semibold text-primary-600">{{ data.boxes[2].label }}</h3>
                        <p class="mt-2 text-lg font-medium tracking-tight text-secondary-950">{{ data.boxes[2].title }}</p>
                        <p class="mt-2 max-w-lg text-sm/6 text-secondary-600">{{ data.boxes[2].description }}</p>
                    </div>
                </div>
                <div class="pointer-events-none absolute inset-px rounded-lg shadow ring-1 ring-black/5 lg:rounded-bl-[2rem]"></div>
            </div>

            {# Box 4 - Bottom Middle #}
            <div class="relative lg:col-span-2 lg:row-start-2">
                <div class="absolute inset-px rounded-lg bg-white"></div>
                <div class="relative flex h-full flex-col overflow-hidden rounded-[calc(theme(borderRadius.lg)+1px)]">
                    <img class="h-80 object-cover" src="{{ data.boxes[3].image }}" alt="{{ data.boxes[3].imageAlt }}">
                    <div class="p-10 pt-4">
                        <h3 class="text-sm/4 font-semibold text-primary-600">{{ data.boxes[3].label }}</h3>
                        <p class="mt-2 text-lg font-medium tracking-tight text-secondary-950">{{ data.boxes[3].title }}</p>
                        <p class="mt-2 max-w-lg text-sm/6 text-secondary-600">{{ data.boxes[3].description }}</p>
                    </div>
                </div>
                <div class="pointer-events-none absolute inset-px rounded-lg shadow ring-1 ring-black/5"></div>
            </div>

            {# Box 5 - Bottom Right #}
            <div class="relative lg:col-span-2 lg:row-start-2">
                <div class="absolute inset-px rounded-lg bg-white max-lg:rounded-b-[2rem] lg:rounded-br-[2rem]"></div>
                <div class="relative flex h-full flex-col overflow-hidden rounded-[calc(theme(borderRadius.lg)+1px)] max-lg:rounded-b-[calc(2rem+1px)] lg:rounded-br-[calc(2rem+1px)]">
                    <img class="h-80 object-cover" src="{{ data.boxes[4].image }}" alt="{{ data.boxes[4].imageAlt }}">
                    <div class="p-10 pt-4">
                        <h3 class="text-sm/4 font-semibold text-primary-600">{{ data.boxes[4].label }}</h3>
                        <p class="mt-2 text-lg font-medium tracking-tight text-secondary-950">{{ data.boxes[4].title }}</p>
                        <p class="mt-2 max-w-lg text-sm/6 text-secondary-600">{{ data.boxes[4].description }}</p>
                    </div>
                </div>
                <div class="pointer-events-none absolute inset-px rounded-lg shadow ring-1 ring-black/5 max-lg:rounded-b-[2rem] lg:rounded-br-[2rem]"></div>
            </div>
        </div>
    </div>
</div>