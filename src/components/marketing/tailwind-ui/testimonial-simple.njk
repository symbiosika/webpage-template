<div class="py-16 sm:py-24">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-xl text-center">
      {% if data.overline %}
      <p class="mt-2 text-lg font-semibold leading-8 tracking-tight text-highlight dark:text-highlight-dark">{{ data.overline }}</p>
      {% endif %}
      <h2 class="mt-2 text-3xl font-bold tracking-tight text-content dark:text-content-dark sm:text-4xl">
        {{ data.headline }}
      </h2>
      <p class="mt-6 text-lg leading-8 text-content-secondary dark:text-content-secondary-dark">
        {{ data.description }}
      </p>
    </div>
  </div>
</div>